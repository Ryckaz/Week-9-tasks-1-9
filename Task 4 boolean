def pg(page):
    if page % 2 == 0:      #IT IS EASER TO UNDERSTAND IF 0 = TRUE, NOT = FALSE
        return True
    else:
        return False
    
def main():
    if pg(page):
        print("\n\n\n\n", "Page", page)
    else:
        print("\n\n\n\n")
        print("%60s%d" % ("Page ",page))
        

page = int(input("Please enter a number for our page for it to go on the left or on the right side: "))
main()


